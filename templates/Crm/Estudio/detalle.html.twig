{% extends 'baseAdmin.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('crm_estudio_lista') }}">Volver</a>
                            {{ form_widget(form.btnImprimir, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial py-0">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive-sm">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                        <tr>
                                            <td class="title-bg-color">CODIGO:</td>
                                            <td class="td-in-well">{{ arEstudio.codigoEstudioPk }}</td>
                                            <td class="title-bg-color"></td>
                                            <td class="td-in-well"></td>
                                            <td class="title-bg-color">CLIENTE</td>
                                            <td class="td-in-well">{{ arEstudio.clienteRel.nombreCorto }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <div class="table-responsive-sm mt-2">

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
