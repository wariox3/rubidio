{% extends 'baseAdmin.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('operacion_estudio_detalle', {'id': arEstudioDetalle.codigoEstudioFk }) }}">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="single-testimonial py-0">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                        <tr>
                                            <td class="title-bg-color">CODIGO:</td>
                                            <td class="td-in-well">{{ arEstudioDetalle.codigoEstudioDetallePk }}</td>
                                            <td class="title-bg-color">RESPONSABLE:</td>
                                            <td class="td-in-well">{{ arEstudioDetalle.responsable | default}}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                        <div class="table-responsive">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>NOMBRE</th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                    {% for arFuncionalidad in arFuncionalidades %}
                                        <tr>
                                            <td>{{ arFuncionalidad.codigoFuncionalidadPk }}</td>
                                            <td>{{ arFuncionalidad.nombre }}</td>
                                            <td class="text-center">
                                                {% if arFuncionalidad.urlYouTube != '' %}
                                                <a href="{{ arFuncionalidad.urlYouTube }}" target="_blank">
                                                    <i class="fas fa-play fa-2x"></i>
                                                </a>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
