{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            {{ form_start(form) }}

            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="single-testimonial">
                            <div class="card">
                                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                                <div class="card-header title-bg-color">
                                    <h5>Filtros</h5>
                                </div>
                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="form-group col-md-3">
                                            <label for="inputEmail4">Cliente:</label>
                                            {{ form_widget(form.clienteRel) }}
                                        </div>
                                    </div>
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex justify-content-end">
                                        {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="single-testimonial">
                            <div class="d-flex justify-content-end">
                                <a class="btnCustom"
                                   href="javascript:abrirVentana3('{{ path('operacion_estudio_nuevo', {'id': '0'}) }}', 'Nuevo', 600, 1200)">
                                    Nuevo
                                </a>
                            </div>
                            <div class="table-responsive-sm mt-2">
                                <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                    <thead class="title-bg-color">
                                    <tr>
                                        <th>Id</th>
                                        <th>Fecha</th>
                                        <th>Cliente</th>
                                        <th>Empresa</th>
                                        <th>Responsable</th>
                                        <th title="Estado terminado">TER</th>
                                        <th></th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for arEstudio in arEstudios %}
                                        <tr>
                                            <td>{{ arEstudio.codigoEstudioPk }}</td>
                                            <td>{{ arEstudio.fecha | date('Y-m-d') }}</td>
                                            <td>{{ arEstudio.clienteNombreCorto }}</td>
                                            <td>{{ arEstudio.empresa }}</td>
                                            <td>{{ arEstudio.responsable }}</td>
                                            <td class="text-center">{{ arEstudio.estadoTerminado?'SI':'NO' }}</td>
                                            <td class="text-center">
                                                <a
                                                        href="javascript:abrirVentana3('{{ path('operacion_estudio_nuevo', {'id': arEstudio.codigoEstudioPk}) }}', 'Nuevo', 600, 1200)">
                                                    <i class="fas fa-pen fa-2x"></i>
                                                </a>
                                            </td>
                                            <td class="text-center">
                                                <a href="{{ path('operacion_estudio_detalle', { 'id': arEstudio.codigoEstudioPk }) }}">
                                                    <i class="fas fa-eye fa-2x"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
    </section>
{% endblock %}