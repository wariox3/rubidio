{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Informaci√≥n</h5>
                    </div>
                    <div class="card-body">
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <label class="control-label">Fecha:</label>
                            {{ form_widget(form.fecha) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Fecha compromiso:</label>
                            {{ form_widget(form.fechaCompromiso) }}
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.estadoInicio) }}
                            {{ form_widget(form.estadoTerminado) }}
                            {{ form_widget(form.estadoCapacitado) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Comentario implementador:</label>
                            {{ form_widget(form.comentarioImplementador) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Comentario general:</label>
                            {{ form_widget(form.comentario) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}