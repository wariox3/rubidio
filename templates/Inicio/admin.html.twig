{% extends 'base.html.twig' %}

 {% block content %}
     {% if is_granted('ROLE_SOPORTE') or is_granted('ROLE_ADMIN') %}
         <!-- Start Services Section -->
         <section class="services-section">
             <div class="container">
                 <div class="row">
                     <div class="col-lg-7 p-1 ">
                         <div class="row">
                             <div class="col-lg-4 col-md-6">
                                 <div class="single-services-item">
                                     <div class="services-icon">
                                         <i class="pe-7s-tools"></i>
                                     </div>
                                     <h3>Sin atender</h3>
                                     <p>{{ soporteSinAtender }}</p>
                                     <div class="services-btn-link">
                                         <a href="#0" class="services-link">Actual</a>
                                     </div>
                                 </div>
                             </div>
                             <div class="col-lg-4 col-md-6">
                                 <div class="single-services-item">
                                     <div class="services-icon">
                                         <i class="pe-7s-close-circle"></i>
                                     </div>

                                     <h3>Sin solución</h3>
                                     <p>{{ soporteSinSolucionar }}</p>
                                     <div class="services-btn-link">
                                         <a href="#" class="services-link">Actual</a>
                                     </div>
                                 </div>
                             </div>
                         </div>
                         <div class="row">
                             <div class="col-lg-4 col-md-4">
                                 <div class="single-services-item">
                                     <div class="services-icon">
                                         <i class="pe-7s-sun"></i>
                                     </div>
                                     <h3>Por día</h3>
                                     <p>{{ soporteDia }}</p>
                                     <div class="services-btn-link">
                                         <a href="#0" class="services-link">Actual</a>
                                     </div>
                                 </div>
                             </div>
                             <div class="col-lg-4 col-md-4">
                                 <div class="single-services-item">
                                     <div class="services-icon">
                                         <i class="pe-7s-date"></i>
                                     </div>
                                     <h3>Por mes</h3>
                                     <p>{{ soporteMes }}</p>
                                     <div class="services-btn-link">
                                         <a href="#" class="services-link">Actual</a>
                                     </div>
                                 </div>
                             </div>
                         </div>
                     </div>
                     <div class="col-lg-5 p-1">
                         <div class="row">
                             <div class="single-services-item">
                                 <div class="table-responsive">
                                     <h3 class="panel-title">Errores</h3>
                                     <table class="table table-striped mb-none">
                                         <thead>
                                         <tr>
                                             <th>Cliente</th>
                                             <th>Errores</th>
                                         </tr>
                                         </thead>
                                         <tbody>
                                         {% for arError in arErrores %}
                                             <tr>
                                                 <td>{{ arError.clienteNombreCorto }}</td>
                                                 <td><span class="label label-success">{{ arError.cantidad }}</span>
                                                 </td>
                                             </tr>
                                         {% endfor %}
                                         </tbody>
                                     </table>
                                 </div>
                             </div>
                         </div>
                     </div>
                 </div>
             </div>
         </section>
     {% endif %}
 {% endblock %}