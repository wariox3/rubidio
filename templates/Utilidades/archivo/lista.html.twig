{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    <div class="container">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Archivos</h5>
                    </div>
                    <div class="card-body p-0">
                        <table class="table table-striped table-bordered table-condensed table-hover tabla-administracion m-0">
                            <thead>
                            <tr>
                                <th>ID</th>
                                <th>CODIGO</th>
                                <th>FECHA</th>
                                <th>NOMBRE</th>
                                <th>ARCHIVO</th>
                                <th>USUARIO</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                                {% for arArchivos in arArchivos %}
                                <tr>
                                    <td><input type="hidden" name="LblCodigo[]"
                                               value="{{ arArchivos.codigoArchivoPk }}">{{ arArchivos.codigoArchivoPk }}
                                    </td>
                                    <td>{{ arArchivos.codigo }}</td>
                                    <td>{{ arArchivos.fecha | date ('Y-m-d H:i:s') }}</td>
                                    <td>{{ arArchivos.descripcion }}</td>
                                    <td>{{ arArchivos.nombre }}</td>
                                    <td>{{ arArchivos.usuario }}</td>
                                    <td style="text-align: center">
                                        <button class="fas fa-download" type="submit" name="OpDescargar" value="{{ arArchivos.codigoArchivoPk }}"></button>
                                    </td>
                                    <td style="text-align: center">
                                        <button class="fas fa-trash" type="submit" name="OpEliminar" value="{{ arArchivos.codigoArchivoPk }}"></button>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <a class="btnCustom"
                           href="{{ path('utilidad_archivo_cargar', { 'tipo': tipo,  'codigo': codigo }) }}">Cargar</a>
                    </div>
                </div
                >
            </div>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
