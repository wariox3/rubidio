{% extends 'base_sin_menu.html.twig' %}
{% block content %}
<div class="container">
    <div class="panel panel-default">
        <div class="panel-heading">Archivos</div>
        <div class="panel-body">
            <div>
                <table  class="table table-striped table-bordered table-condensed table-hover tabla-datos">
                    <tr>
                        <th>ID</th>
                        <th>CODIGO</th>
                        <th>FECHA</th>
                        <th>NOMBRE</th>
                        <th>ARCHIVO</th>
                        <th>USUARIO</th>
                        <th></th>
                        <th></th>
                    </tr>
                    {% for arArchivos in arArchivos %}
                        <tr>
                            <td><input type="hidden" name="LblCodigo[]" value="{{ arArchivos.codigoArchivoPk }}">{{ arArchivos.codigoArchivoPk }} </td>
                            <td>{{ arArchivos.codigo  }}</td>
                            <td>{{ arArchivos.fecha | date ('Y-m-d H:i:s') }}</td>
                            <td>{{ arArchivos.descripcion  }}</td>
                            <td>{{ arArchivos.nombre  }}</td>
                            <td>{{ arArchivos.usuario  }}</td>
                            <td style="text-align: center"><a href="{{ path('documental_archivo_descargar', { 'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><i class="fa fa-download" style="font-size: large;color: black;"></i></a></td>
                            <td style="text-align: center"><a href="{{ path('documental_archivo_eliminar', { 'tipo': tipo, 'codigo': arArchivos.codigoArchivoPk }) }}"onclick='return confirm("Esta seguro de eliminar el archivo?")'><i class="fa fa-trash-o" style="font-size: large;color: black;"></i></a></td>
                        </tr>
                    {% endfor %}
                </table>
            </div>
        </div>
        <div class="modal-footer">

        </div>
    </div>
</div>
{% endblock %}
