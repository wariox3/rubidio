{% extends 'base.html.twig' %}
{% block body %}
    <!-- Start Home Area -->
    <div class="home-area" style="height: 100vh">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-lg-6 col-md-12">
                            <div class="main-banner-content">
                                <h1>Ingreso <span class="color-text">Mesa de ayuda</span>
                                </h1>
                                {% if error %}
                                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}
                                <form action="{{ path('login') }}" method="post">
                                    <div class="form-group mb-lg">
                                        <label>Nombre de usuario</label>
                                        <input name="_username" type="text" class="form-control input-lg"/>
                                    </div>

                                    <div class="form-group mb-lg">
                                        <div class="clearfix">
                                            <label class="pull-left">Contraseña</label>
                                            <a href="#" class="pull-right" onclick="alert('En construcción')">¿Perdiste
                                                la contraseña?</a>
                                        </div>
                                        <div class="input-group input-group-icon">
                                            <input name="_password" type="password" class="form-control input-lg"/>
                                        </div>
                                    </div>
                                    <div class="banner-btn">
                                        <button type="submit" class="default-btn nav-btn-1">Ingresar</button>
                                        <button type="submit"
                                                class="default-btn  btn-lg visible-xs mt-lg">
                                            Registrarse
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-12">
                            <div class="banner-image">
                                <img src="{{ asset('landingPage/img/home-font.png') }}" alt="logo">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="grey-cr"></div>
    </div>
{% endblock %}