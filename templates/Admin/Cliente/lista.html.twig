{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="card-header title-bg-color">
                                <h5>Filtros</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Nombre:</label>
                                        {{ form_widget(form.nombre) }}
                                    </div>
{#                                    <div class="form-group col-md-3">#}
{#                                        <label for="inputPassword4">Desarrollo:</label>#}
{#                                        {{ form_widget(form.estadoDesarrollo) }}#}
{#                                    </div>#}
{#                                    <div class="form-group col-md-3">#}
{#                                        <label for="inputPassword4">Escalado:</label>#}
{#                                        {{ form_widget(form.estadoEscalado) }}#}
{#                                    </div>#}
{#                                    <div class="form-group col-md-3">#}
{#                                        <label for="inputPassword4">Solucionado:</label>#}
{#                                        {{ form_widget(form.estadoSolucionado) }}#}
{#                                    </div>#}
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-end">
                            <a class="btnCustom" href="{{ path('admin_cliente_nuevo', {'id': 0}) }}">Nuevo</a>
                        </div>
                        <div class="table-responsive-sm mt-2">
                            <table class="table table-condensed table-bordered tabla-administracion table-hover mb-none ">
                                <thead class="title-bg-color">
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th></th>
                                    <th></th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for arCliente in arClientes %}
                                    <tr>
                                        <td>{{ arCliente.codigoClientePk }}</td>
                                        <td>{{ arCliente.nombreCorto }}</td>
                                        <td class="text-center">
                                            <a href="{{ path('admin_cliente_nuevo', {'id': arCliente.codigoClientePk}) }}">
                                                <i class="fas fa-pen fa-2x"></i>
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a href="{{ path('admin_cliente_detalle', {'id': arCliente.codigoClientePk}) }}">
                                                <i class="fas fa-eye fa-2x"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="d-flex justify-content-between mt-2">
                            <div class="btn btn-default btn-sm">Registros
                                <span>{{ arClientes.getTotalItemCount }}</span>
                            </div>
                            <div class="btn-group btn-xs">
                                {{ knp_pagination_render(arClientes) }}
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
