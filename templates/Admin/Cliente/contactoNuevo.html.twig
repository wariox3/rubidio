{% extends 'base_sin_menu.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Informacion</h5>
                    </div>
                    <div class="card-body">
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <label class="control-label">Contacto tipo:</label>
                            {{ form_widget(form.contactoTipoRel) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Identificacion:</label>
                            {{ form_widget(form.identificacionRel) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Numero identificacion:</label>
                            {{ form_widget(form.numeroIdentificacion) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ciudad identificacion:</label>
                            {{ form_widget(form.ciudadIdentificacionRel) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Nombre:</label>
                            {{ form_widget(form.nombre) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Cargo:</label>
                            {{ form_widget(form.cargo) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Correo:</label>
                            {{ form_widget(form.correo) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Tel√©fono:</label>
                            {{ form_widget(form.telefono) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Direccion:</label>
                            {{ form_widget(form.direccion) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ciudad:</label>
                            {{ form_widget(form.ciudadRel) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
