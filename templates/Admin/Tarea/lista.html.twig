{% extends 'base.html.twig' %}

{% block content %}



    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Filtro de busqueda</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Proyecto:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.proyectoRel) }}
                        </div>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">

                        </div>
                        <label class="col-sm-1 control-label">Ejecucion:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoEjecucion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"></label>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">
                        </div>
                        <label class="col-sm-1 control-label">Terminado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoTerminado) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"></label>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">
                        </div>
                        <label class="col-sm-1 control-label">Verificado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoVerificado) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>

        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-bordered table-hover mb-none tabla-datos">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha</th>
                                <th>Entrega</th>
                                <th>Prioridad</th>
                                <th>Proyecto</th>
                                <th>Usuario</th>
                                <th>Caso</th>
                                <th>Descripcion</th>
                                <th title="Estado ejecucion">EJE</th>
                                <th title="Estado terminado">TER</th>
                                <th title="Estado verificado">VER</th>
                                <th title="Estado devolucion">DEV</th>
                                <th></th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arTarea in arTareas %}
                                <tr>
                                    <td>{{ arTarea.codigoTareaPk }}</td>
                                    <td>{{ arTarea.fecha | date('Y-m-d H:i') }}</td>
                                    <td>{{ arTarea.fechaEntrega ? arTarea.fechaEntrega | date('Y-m-d H:i') : ''}}</td>
                                    <td>{{ arTarea.codigoPrioridadFk }}</td>
                                    <td>{{ arTarea.proyectoNombre }}</td>
                                    <td>{{ arTarea.codigoUsuarioFk }}</td>
                                    <td>{{ arTarea.codigoCasoFk }}</td>
                                    <td>{{ arTarea.descripcion }}</td>
                                    <td>{{ arTarea.estadoEjecucion ? 'SI':'NO' }}</td>
                                    <td>{{ arTarea.estadoTerminado ? 'SI':'NO' }}</td>
                                    <td>{{ arTarea.estadoVerificado ? 'SI':'NO' }}</td>
                                    <td>{{ arTarea.estadoDevolucion ? 'SI':'NO' }}</td>
                                    <td class="text-center">
                                        <a href="{{ path('admin_tarea_nuevo', { 'id': arTarea.codigoTareaPk, 'codigoCaso': 0 }) }}">
                                            <i class="fa fa-edit fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('admin_tarea_detalle', { 'id': arTarea.codigoTareaPk }) }}">
                                            <i class="fa fa-eye fa-lg"></i>
                                        </a>
                                    </td>
                                    <td class="text-center">
                                        <input type="checkbox" name="ChkSeleccionar[]" value="{{ arTarea.codigoTareaPk }}"/>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3" >
                            <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                                <a class="btn btn-sm btn-default"  href="{{ path('admin_tarea_nuevo', {'id': 0, 'codigoCaso': 0}) }}">Nuevo</a>
                                {{ form_widget(form.btnEliminar) }}
                            </div>
                        </div>
                    </div>
                </footer>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>



{% endblock %}
