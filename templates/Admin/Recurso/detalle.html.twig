{% extends 'baseAdmin.html.twig' %}
{% block content %}
    {{ form_start(form) }}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('admin_recurso_lista') }}">Volver <span></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row mt-2">
                <div class="col-md-12">
                    <div class="single-testimonial py-0">
                        <div class="table-responsive">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <tr>
                                    <td class="title-bg-color">CODIGO:</td>
                                    <td class="td-in-well">{{ arRecurso.codigoRecursoPk }}</td>
                                </tr>
                                <tr>
                                    <td class="title-bg-color">TITULO:</td>
                                    <td class="td-in-well">{{ arRecurso.titulo }}</td>
                                </tr>
                                <tr>
                                    <td class="title-bg-color">MODULO:</td>
                                    <td class="td-in-well">{{ arRecurso.moduloRel.nombre }}</td>
                                </tr>
                                <tr>
                                    <td class="title-bg-color">FECHA:</td>
                                    <td class="td-in-well">{{ arRecurso.fecha | date('Y-m-d') }}</td>
                                </tr>
                                <tr>
                                    <td class="title-bg-color">URL:</td>
                                    <td class="td-in-well" colspan="5">{{ arRecurso.url }}</td>
                                </tr>


                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    {{ form_end(form) }}
{% endblock %}
