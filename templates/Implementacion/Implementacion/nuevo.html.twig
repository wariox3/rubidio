{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>
                    <h2 class="panel-title">Informacion</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Nombre:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.nombre) }}
                        </div>
                        <label class="col-sm-1 control-label">Cliente:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.clienteRel) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Lider cliente:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.liderCliente) }}
                        </div>
                        <label class="col-sm-1 control-label">Celular cliente:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.celularLider) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Correo cliente:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.correoLider) }}
                        </div>
                        <label class="col-sm-1 control-label">Implementador:</label>
                        <div class="col-sm-5">
                            {{ form_widget(form.implementadorRel) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-4">
                            {{ form_widget(form.general) }}
                            {{ form_widget(form.recursoHumano) }}
                            {{ form_widget(form.turnos) }}
                            {{ form_widget(form.inventario) }}
                            {{ form_widget(form.tesoreria) }}
                            {{ form_widget(form.cartera) }}
                            {{ form_widget(form.crm) }}
                            {{ form_widget(form.financiero) }}
                            {{ form_widget(form.juridico) }}
                            {{ form_widget(form.transporte) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="btn btn-default btn-sm" style="float:left" href="{{ path('implementacion_implementacion_lista') }}">Cancelar</a>
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
