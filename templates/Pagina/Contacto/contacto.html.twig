{% extends 'baseOscura.html.twig' %}
{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title-area">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h2>Contacto</h2>
                        <ul>
                            <li><a href="{{ path('inicio') }}">Inicio</a>
                            </li>
                            <li>Contacte un asesor comercial</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->

    <!-- Start Contact Section -->
    <div class="contact-section section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-12">
                    <div class="contact-information-box-3">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="single-contact-info-box">
                                    <div class="contact-info">
                                        <h6>Direccion:</h6>
                                        <p>Cll 34 Nro 66 A 33 Ofc 201, Conquistadores</p>
                                        <p>Medellin, Antioquia - Colombia</p>
                                    </div>
                                    <div class="contact-info-bg-icon">
                                        <i class="pe-7s-map-marker"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="single-contact-info-box">
                                    <div class="contact-info">
                                        <h6>Telefono</h6>
                                        <p>+57 320 5015059</p>
                                        <p>+57 305 3442283</p>
                                    </div>
                                    <div class="contact-info-bg-icon">
                                        <i class="pe-7s-call"></i>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <div class="single-contact-info-box">
                                    <div class="contact-info">
                                        <h6>Correo:</h6>
                                        <p>administracion@semantica.com.co</p>
                                        <p>investigacion@semantica.com.co</p>
                                    </div>
                                    <div class="contact-info-bg-icon">
                                        <i class="pe-7s-mail"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-8 col-md-12">
                    <div class="contact-form contact-form-3">
                        <p class="form-message"></p>
                        {{ form_start(form, { 'attr': {'class': 'form'} }) }}
                            {{ form_errors(form) }}
                            <div class="row">
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.nombre, { 'attr': {'placeholder': 'Su nombre'} }) }}
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.correo, { 'attr': {'placeholder': 'Correo'} }) }}
                                        {{ form_errors(form.correo) }}
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.telefono, { 'attr': {'placeholder': 'Telefono'} }) }}
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.empresa, { 'attr': {'placeholder': 'Empresa'} }) }}
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-12">
                                    <div class="form-group">
                                        {{ form_widget(form.descripcion, { 'attr': {'placeholder': 'Su pregunta', 'cols':30, 'rows':6} }) }}
                                    </div>
                                </div>
                            </div>
                        <div class="d-flex align-content-center ">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Contact Section -->

{% endblock %}