{% extends 'baseOscura.html.twig' %}
{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title-area item-bg2">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h2>Documentación</h2>
                        <ul>
                            <li><a href="{{ path('inicio') }}">Inicio</a></li>
                            <li>Servicios</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="single-testimonial">
                    <div class="d-flex justify-content-start">
                        <a class="btnCustom" href="{{ path('soporte_documentacion') }}">Volver</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row my-2">
            <div class="col-12">
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Descripción</h5>
                    </div>
                    <div class="card-body p-0">
                        {% for arDocumentacionDetalle in  arDocumentacionDetalles %}
                            <li class="list-group-item py-4 px-4">
                                <a href="javascript:void(0)" class="fs-lg fw-500">{{ arDocumentacionDetalle.titulo }}</a>
                                <div class="mt-2">
                                    <p class="text-justify">
                                        {{ arDocumentacionDetalle.contenido | default("Sin contenido adjunto") | raw }}
                                    </p>
                                </div>
                            </li>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Start Services Section -->
    <!-- End Services Section -->

{% endblock %}