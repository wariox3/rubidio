{% extends 'baseOscura.html.twig' %}
{% block content %}

    <!-- Start Page Title Area -->
    <div class="page-title-area item-bg2">
        <div class="d-table">
            <div class="d-table-cell">
                <div class="container">
                    <div class="page-title-content">
                        <h2>Documentación & Recursos</h2>
                        <ul>
                            <li><a href="{{ path('inicio') }}">Inicio</a></li>
                            <li>Ayuda</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Title Area -->
    <div class="container">
        <div class="row my-2">
            <div class="col-md-12">
                {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Filtros</h5>
                    </div>
                    <div class="card-body">
                        <div class="form-row">
                            <div class="form-group col-md-3">
                                <label for="inputEmail4">Modulo:</label>
                                {{ form_widget(form.modulo) }}
                            </div>
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                    </div>
                </div>
                {{ form_rest(form) }}
                {{ form_end(form) }}
            </div>
        </div>
        <nav>
            <div class="nav nav-tabs mt-3" id="nav-tab" role="tablist">
                <a class="nav-link" id="nav-home-tab" data-toggle="tab" href="#nav-indice" role="tab" aria-controls="nav-home" aria-selected="true">Índice</a>
                <a class="nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-documentacion" role="tab" aria-controls="nav-home" aria-selected="true">Documentación</a>
                <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-funcionalidades" role="tab" aria-controls="nav-profile" aria-selected="false">Funcionalidades</a>
                <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-recursos" role="tab" aria-controls="nav-profile" aria-selected="false">Recursos</a>
                <a class="nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-procesos" role="tab" aria-controls="nav-profile" aria-selected="false">Procesos</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade" id="nav-indice" role="tabpanel" aria-labelledby="nav-home-tab">
                ...
            </div>
            <div class="tab-pane fade show active" id="nav-documentacion" role="tabpanel"
                 aria-labelledby="nav-profile-tab">
                <div class="row my-2">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-body p-0">
                                {% for arDocumentacion in  arDocumentaciones %}
                                    <li class="list-group-item py-4">
                                        <div class="services-btn-link">
                                            <a href="{{ path('soporte_documentacion_detalle', {'id':arDocumentacion.codigoDocumentacionPk }) }}"
                                               class="services-link">{{ arDocumentacion.titulo | default("...") }}</a>
                                        </div>
                                        <div class="fs-xs mt-1">
                                            <a>{{ arDocumentacion.ruta }}</a>
                                            <a class="text-success">{{ arDocumentacion.codigoModuloFk }}</a>
                                        </div>
                                        <div class="mt-2">
                                            <p class="text-justify">
                                                <span class="text-muted">Ultima actualización {{ arDocumentacion.fechaActualizacion | date('Y-m-d') }}</span>
                                            </p>
                                        </div>
                                    </li>
                                {% endfor %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-recursos" role="tabpanel" aria-labelledby="nav-contact-tab">
                <div class="row my-2">
                    <div class="single-testimonial">
                        <div class="table-responsive-sm mt-2">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <thead class="title-bg-color">
                                <tr>
                                    <th>Id</th>
                                    <th>Modulo</th>
                                    <th>Fecha</th>
                                    <th>Titulo</th>
                                    <th>Autor</th>
{#                                    <th></th>#}
                                </tr>
                                </thead>
                                <tbody>
                                {% for arRecurso in arRecursos %}
                                    <tr>
                                        <td>{{ arRecurso.codigoRecursoPk }}</td>
                                        <td>{{ arRecurso.moduloNombre }}</td>
{#                                        <td>{{ arRecurso.fecha | date('Y-m-d') }}</td>#}
                                        <td>{{ arRecurso.titulo }}</td>
                                        <td>{{ arRecurso.autor }}</td>
{#                                        <td style="text-align: center">#}
{#                                            <a href="{{ arRecurso.url }}">Descargar</a>#}
{#                                        </td>#}
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-funcionalidades" role="tabpanel" aria-labelledby="nav-contact-tab">
                <div class="row my-2">
                    <div class="single-testimonial">
                        <div class="table-responsive-sm mt-2">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <thead class="title-bg-color">
                                <tr>
                                    <th>Modulo</th>
                                    <th>Función</th>
                                    <th>Funcionalidad</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for arFuncionalidad in arFuncionalidades %}
                                    <tr>
                                        <td>{{ arFuncionalidad.moduloNombre }}</td>
                                        <td>{{ arFuncionalidad.codigoFuncionFk }}</td>
                                        <td>{{ arFuncionalidad.nombre }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-procesos" role="tabpanel" aria-labelledby="nav-contact-tab">
                ...
            </div>
        </div>
    </div>
    <!-- Start Services Section -->
    <!-- End Services Section -->

{% endblock %}