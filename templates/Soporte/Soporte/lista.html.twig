{% extends 'base.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="card-header title-bg-color">
                                <h5>Filtros</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Cliente:</label>
                                        {{ form_widget(form.clienteRel) }}
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputPassword4">Atendido:</label>
                                        {{ form_widget(form.estadoAtendido) }}
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputPassword4">Solucionado:</label>
                                        {{ form_widget(form.estadoSolucionado) }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <section class="card">
                            <div class="card-header bg-white">
                                <div class="d-flex justify-content-end">
                                    <a class="btnCustom" href="{{ path('soporte_soporte_nuevo', {'id': 0}) }}">Nuevo</a>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <thead class="title-bg-color">
                                        <tr>
                                            <th>Id</th>
                                            <th>Cliente</th>
                                            <th>Fecha</th>
                                            <th>F_ATE</th>
                                            <th>F_SOL</th>
                                            <th>Contacto</th>
                                            <th>Telefono</th>
                                            <th>Descripcion</th>
                                            <th>Solucion</th>
                                            <th>Ate</th>
                                            <th>Sol</th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for arSoporte in arSoportes %}
                                            <tr>
                                                <td>{{ arSoporte.codigoSoportePk }}</td>
                                                <td>{{ arSoporte.clienteNombreCorto }}</td>
                                                <td>{{ arSoporte.fecha | date('Y-m-d H:i') }}</td>
                                                <td>{{ arSoporte.estadoAtendido ? arSoporte.fechaAtendido | date('Y-m-d H:i'): '' }}</td>
                                                <td>{{ arSoporte.estadoSolucionado ? arSoporte.fechaSolucion | date('Y-m-d H:i'): '' }}</td>
                                                <td>{{ arSoporte.contacto }}</td>
                                                <td>{{ arSoporte.telefono }}</td>
                                                <td>{{ arSoporte.descripcion }}</td>
                                                <td>{{ arSoporte.solucion }}</td>
                                                <td class="text-center">
                                                    {% if arSoporte.estadoAtendido == 1 %}
                                                        SI
                                                    {% else %}
                                                        <button class="btnCustom btn-xs" type="submit" name="OpAtender"
                                                                value="{{ arSoporte.codigoSoportePk }}">Atender
                                                        </button>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    {% if arSoporte.estadoSolucionado == 1 %}
                                                        SI
                                                    {% else %}
                                                        {% if arSoporte.estadoAtendido == 1 %}
                                                            <a class="btnCustom"
                                                               href="javascript:abrirVentana3('{{ path('soporte_soporte_solucion', {'id': arSoporte.codigoSoportePk}) }}', 'SolucionSoporte', 600, 1200)">Solucion</a>
                                                        {% else %}
                                                            NO
                                                        {% endif %}
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    {% if arSoporte.estadoSolucionado == 0 %}
                                                        <a href="{{ path('soporte_soporte_nuevo', { 'id': arSoporte.codigoSoportePk }) }}">
                                                            <i class="fas fa-pen fa-2x"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <input type="checkbox" name="ChkSeleccionar[]"
                                                           value="{{ arSoporte.codigoSoportePk }}"/>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex justify-content-between">
                                    <div class="btn btn-default btn-sm">Registros
                                        <span>{{ arSoportes.getTotalItemCount }}</span>
                                    </div>
                                    <div class="btn-group btn-xs">
                                        {{ knp_pagination_render(arSoportes) }}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
