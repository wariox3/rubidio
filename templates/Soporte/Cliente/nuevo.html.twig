{% extends 'base.html.twig' %}
{% block content %}
    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Informacion </h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nombre:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.nombreCorto) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nombre completo:</label>
                        <div class="col-sm-10">
                            {{ form_widget(form.nombreExtendido) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Nit:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.nit) }}
                        </div>
                        <label class="col-sm-2 control-label">DV:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.digitoVerificacion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Tel√©fono:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.telefono) }}
                        </div>
                        <label class="col-sm-2 control-label">Direccion:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.direccion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Correo error:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.correoError) }}
                        </div>
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">

                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="btn btn-default btn-sm" style="float:left" href="{{ path('soporte_cliente_lista') }}">Cancelar</a>
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Facturacion electronica </h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Suscriptor</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.suscriptor) }}
                        </div>
                        <label class="col-sm-2 control-label">TestId:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.codigoSetPruebas) }}
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">
                            {{ form_widget(form.facturacionElectronica) }}
                            {{ form_widget(form.setPruebas) }}
                        </div>
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">

                        </div>
                    </div>
                </div>
            </section>
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Nomina electronica </h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Empleador:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.empleador) }}
                        </div>
                        <label class="col-sm-2 control-label">TestId:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.codigoSetPruebasNominas) }}
                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">
                            {{ form_widget(form.nominaElectronica) }}
                            {{ form_widget(form.setPruebasNomina) }}
                        </div>
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">

                        </div>
                    </div>
                </div>
            </section>
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Servicio </h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Fecha suspension:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.fechaSuspension) }}
                        </div>
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">

                        </div>
                    </div>
                    <div class="form-group">

                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">
                            {{ form_widget(form.servicioSoporte) }}
                        </div>
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-4">

                        </div>
                    </div>
                </div>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
