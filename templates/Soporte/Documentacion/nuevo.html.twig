{% extends 'base_sin_menu.html.twig' %}

{% block content %}
    {{ form_start(form) }}
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header title-bg-color">
                        <h5>Información</h5>
                    </div>
                    <div class="card-body">
                        {{ form_errors(form) }}
                        <div class="form-group">
                            <label class="control-label">Modulo:</label>
                            {{ arDocumentacion.codigoModuloFk }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Función:</label>
                            {{ arDocumentacion.codigoFuncionFk }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Grupo:</label>
                            {{ arDocumentacion.codigoGrupoFk }}
                        </div>

                        <div class="form-group">
                            <label class="control-label">Titulo:</label>
                            {{ form_widget(form.titulo) }}
                        </div>
                        <div class="form-group">
                            <label class="control-label">Ruta:</label>
                            {{ form_widget(form.ruta) }}

                        </div>
                        <div class="form-group">
                            <label class="control-label">Contenido:</label>
                            {{ form_widget(form.contenido) }}
                        </div>
                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-end">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btnCustom'} }) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{ form_rest(form) }}
    {{ form_end(form) }}
{% endblock %}
{% block javascriptsPersonales %}
    <script>
        $(() => {
            $('#documentacion_contenido').summernote({
                height: 400,
                toolbar: [
                    // [groupName, [list of button]]
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['style', ['style']],
                    ['insert', ['picture', 'video']],
                ],
                styleTags: [
                    'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
                ],
            });
        })
    </script>
{% endblock %}