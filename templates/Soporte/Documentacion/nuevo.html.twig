{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Informacion</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Modulo:</label>
                        <div class="col-sm-4">
                            {{ arDocumentacion.codigoModuloFk }}
                        </div>
                        <label class="col-sm-2 control-label">Funcion:</label>
                        <div class="col-sm-4">
                            {{ arDocumentacion.codigoFuncionFk }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Grupo:</label>
                        <div class="col-sm-4">
                            {{ arDocumentacion.codigoGrupoFk }}
                        </div>
                        <label class="col-sm-2 control-label">Modelo:</label>
                        <div class="col-sm-4">
                            {{ arDocumentacion.codigoModeloFk }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">Titulo:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.titulo) }}
                        </div>
                        <label class="col-sm-2 control-label">Ruta:</label>
                        <div class="col-sm-4">
                            {{ form_widget(form.ruta) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-1 control-label">Contenido:</label>
                        <div class="col-sm-11">
                            {{ form_widget(form.contenido) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-6">
                            <a class="btn btn-default btn-sm" style="float:left" href="{{ path('soporte_documentacion_lista') }}">Cancelar</a>
                        </div>
                        <div class="col-sm-6">
                            {{ form_widget(form.guardar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
{% block javascriptsPersonales %}
    <script>
        $(()=>{
            $('#documentacion_contenido').summernote({
                height: 400,
                toolbar: [
                    // [groupName, [list of button]]
                    ['font', ['bold', 'italic','underline', 'clear']],
                    ['style', ['style']],
                    ['insert', ['picture', 'video']],
                ],
                styleTags: [
                    'h1', 'h2', 'h3', 'h4', 'h5', 'h6'
                ],
            });
        })
    </script>
{% endblock %}