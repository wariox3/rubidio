{% extends 'base.html.twig' %}

{% block content %}



    <div class="row">
        {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
        <div class="col-md-12 col-lg-3 col-xl-3">
            <section class="panel panel-featured-left panel-featured-tertiary">
                <div class="panel-body">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon bg-tertiary">
                                <i class="fa fa-shopping-cart"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Tareas</h4>
                                <div class="info">
                                    <strong class="amount">{{ arrDatos['tareas'] }}</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                <a class="text-muted text-uppercase">(mes)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-md-12 col-lg-3 col-xl-3">
            <section class="panel panel-featured-left panel-featured-quartenary">
                <div class="panel-body">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon bg-quartenary">
                                <i class="fa fa-user"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Verificadas</h4>
                                <div class="info">
                                    <strong class="amount">{{ arrDatos['tareasVerificadas'] }}</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                <a class="text-muted text-uppercase">(mes)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-md-12 col-lg-3 col-xl-3">
            <section class="panel panel-featured-left panel-featured-secondary">
                <div class="panel-body">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon bg-secondary">
                                <i class="fa fa-usd"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Devoluciones</h4>
                                <div class="info">
                                    <strong class="amount"># {{ arrDatos['devoluciones'] }}</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                <a class="text-muted text-uppercase">(mes)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-md-12 col-lg-3 col-xl-3">
            <section class="panel panel-featured-left panel-featured-primary">
                <div class="panel-body">
                    <div class="widget-summary">
                        <div class="widget-summary-col widget-summary-col-icon">
                            <div class="summary-icon bg-primary">
                                <i class="fa fa-life-ring"></i>
                            </div>
                        </div>
                        <div class="widget-summary-col">
                            <div class="summary">
                                <h4 class="title">Tiempo</h4>
                                <div class="info">
                                    <strong class="amount">H: 0 M: 0</strong>
                                </div>
                            </div>
                            <div class="summary-footer">
                                <a class="text-muted text-uppercase">(mes)</a>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <div class="col-md-12">
            <section class="panel">
                <header class="panel-heading">
                    <div class="panel-actions">
                        <a href="#" class="fa fa-caret-down"></a>
                        <a href="#" class="fa fa-times"></a>
                    </div>

                    <h2 class="panel-title">Filtro de busqueda</h2>
                </header>
                <div class="panel-body">
                    <div class="form-group">
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-5">

                        </div>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">

                        </div>
                        <label class="col-sm-1 control-label">Ejecucion:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoEjecucion) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"></label>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">
                        </div>
                        <label class="col-sm-1 control-label">Terminado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoTerminado) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-6 control-label"></label>
                        <label class="col-sm-1 control-label"></label>
                        <div class="col-sm-2">
                        </div>
                        <label class="col-sm-1 control-label">Verificado:</label>
                        <div class="col-sm-2">
                            {{ form_widget(form.estadoVerificado) }}
                        </div>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3">
                            {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btn btn-primary', 'style':'float:right'} }) }}
                        </div>
                    </div>
                </footer>
            </section>
        </div>

        <div class="col-md-12">
            <section class="panel">
                <div class="panel-body">
                    <div class="table-responsive">
                        <table class="table table-condensed table-bordered table-hover mb-none tabla-datos">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Fecha</th>
                                <th>Entrega</th>
                                <th>Prioridad</th>
                                <th>Descripcion</th>
                                <th>Caso</th>
                                <th title="Estado ejecucion">EJE</th>
                                <th title="Estado terminado">TER</th>
                                <th title="Estado verificado">VER</th>
                                <th title="Estado devolucion">DEV</th>
                                <th></th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for arTarea in arTareas %}
                                <tr>
                                    <td>{{ arTarea.codigoTareaPk }}</td>
                                    <td>{{ arTarea.fecha | date('Y-m-d H:i') }}</td>
                                    <td>{{ arTarea.fechaEntrega ? arTarea.fechaEntrega | date('Y-m-d H:i') : ''}}</td>
                                    <td>{{ arTarea.codigoPrioridadFk }}</td>
                                    <td>{{ arTarea.descripcion }}</td>
                                    <td>{{ arTarea.codigoCasoFk }}</td>
                                    <td>{{ arTarea.estadoEjecucion ? 'SI':'NO' }}</td>
                                    <td>{{ arTarea.estadoTerminado ? 'SI':'NO' }}</td>
                                    <td>{{ arTarea.estadoVerificado ? 'I':'NO' }}</td>
                                    <td {% if arTarea.estadoDevolucion %}class="danger" {% endif %}>{{ arTarea.estadoDevolucion ? 'SI':'NO' }}</td>
                                    <td>
                                        {% if arTarea.estadoEjecucion == 0 and arTarea.estadoTerminado == 0 %}

                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <a href="{{ path('desarrollo_tarea_detalle', { 'id': arTarea.codigoTareaPk }) }}">
                                            <i class="fa fa-eye fa-lg"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
                <footer class="panel-footer">
                    <div class="row">
                        <div class="col-sm-9 col-sm-offset-3" >
                            <div style="float: right; margin-right: 5px !important;" class="btn-group" role="group" aria-label="...">
                                {#<a class="btn btn-sm btn-default"  href="{{ path('tarea_nuevo', {'id': 0}) }}">Nuevo</a>#}

                            </div>
                        </div>
                    </div>
                </footer>
            </section>
        </div>
        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>



{% endblock %}
