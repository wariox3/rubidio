{% extends 'base.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                            <div class="card-header title-bg-color">
                                <h5>Filtros</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="control-label">Atendido:</label>
                                    {{ form_widget(form.estadoAtendido) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Solucionado:</label>
                                    {{ form_widget(form.estadoSolucionado) }}
                                </div>

                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'default-btn'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <thead class="title-bg-color">
                                        <tr>
                                            <th>Id</th>
                                            <th>Fecha</th>
                                            <th>F_ATE</th>
                                            <th>F_SOL</th>
                                            <th>Contacto</th>
                                            <th>Telefono</th>
                                            <th>Descripcion</th>
                                            <th>Ate</th>
                                            <th>Solucion</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for arSoporte in arSoportes %}
                                            <tr>
                                                <td>{{ arSoporte.codigoSoportePk }}</td>
                                                <td>{{ arSoporte.fecha | date('Y-m-d H:i') }}</td>
                                                <td>{{ arSoporte.estadoAtendido ? arSoporte.fechaAtendido | date('Y-m-d H:i'): '' }}</td>
                                                <td>{{ arSoporte.estadoSolucionado ? arSoporte.fechaSolucion | date('Y-m-d H:i'): '' }}</td>
                                                <td>{{ arSoporte.contacto }}</td>
                                                <td>{{ arSoporte.telefono }}</td>
                                                <td>{{ arSoporte.descripcion }}</td>
                                                <td class="text-center">
                                                    {% if arSoporte.estadoAtendido == 1 %}
                                                        <i title="El soporte ya fue atendido"
                                                           class="far fa-smile fa-2x text-info"></i>
                                                    {% else %}
                                                        <i title="No se ha atendido el caso, estamos trabajando en otros casos"
                                                           class="far fa-frown fa-2x text-info"></i>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    {% if arSoporte.estadoSolucionado == 1 %}
                                                        <i title="Fue necesario utilizar un equipo especializado"
                                                           class="fa fa-check fa-2x text-success"></i>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex justify-content-between">
                                    <div class="btn btn-default btn-sm">Registros
                                        <span>{{ arSoportes.getTotalItemCount }}</span>
                                    </div>
                                    <div class="btn-group btn-xs">
                                        {{ knp_pagination_render(arSoportes) }}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
