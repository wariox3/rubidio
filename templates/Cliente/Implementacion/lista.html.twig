{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}

                            <div class="card-header title-bg-color">
                                <h5>Filtros</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label class="col-sm-2 control-label">Modulo:</label>
                                    <div class="col-sm-2">
                                        {{ form_widget(form.modulo) }}
                                    </div>
                                    <label class="col-sm-2 control-label">Capacitado:</label>
                                    <div class="col-sm-2">
                                        {{ form_widget(form.estadoCapacitado) }}
                                    </div>
                                    <label class="col-sm-2 control-label">Terminado:</label>
                                    <div class="col-sm-2">
                                        {{ form_widget(form.estadoTerminado) }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <thead class="title-bg-color">
                                        <tr>
                                            <th>CÃ“D</th>
                                            <th>NOMBRE</th>
                                            <th>CLIENTE</th>
                                            <th>IMPLEMENTADOR</th>
                                            <th>TELEFONO</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        <tr>
                                            <td>{{ arImplementacion.codigoImplementacionPk }}</td>
                                            <td>{{ arImplementacion.nombre }}</td>
                                            <td>{{ arImplementacion.clienteRel.nombreCorto }}</td>
                                            <td>{{ arImplementacion.implementadorRel.nombre |default('') }}</td>
                                            <td>{{ arImplementacion.implementadorRel.telefono |default('') }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <thead class="title-bg-color">
                                        <tr>
                                            <th>Id</th>
                                            <th>Modulo</th>
                                            <th>Cod</th>
                                            <th>Tema</th>
                                            <th>Descripcion</th>
                                            <th>Comentario</th>
                                            <th>Implementador</th>
                                            <th>Accion</th>
                                            <th>Responsable</th>
                                            <th>Fecha</th>
                                            <th title="Estado inicio">Ini</th>
                                            <th title="Estado capacitado">Cap</th>
                                            <th title="Estado terminado">Ter</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for arImplementacionDetalle in arImplementacionDetalles %}
                                            <tr>
                                                <td>{{ arImplementacionDetalle.codigoImplementacionDetallePk }}</td>
                                                <td>{{ arImplementacionDetalle.moduloNombre }}</td>
                                                <td>{{ arImplementacionDetalle.codigoTemaFk }}</td>
                                                <td>{{ arImplementacionDetalle.temaNombre }}</td>
                                                <td>{{ arImplementacionDetalle.temaDescripcion }}</td>
                                                <td>{{ arImplementacionDetalle.comentario }}</td>
                                                <td>{{ arImplementacionDetalle.comentarioImplementador }}</td>
                                                <td>{{ arImplementacionDetalle.accionNombre }}</td>
                                                <td>{{ arImplementacionDetalle.responsableNombre }}</td>
                                                <td>{{ arImplementacionDetalle.estadoCapacitado?arImplementacionDetalle.fecha | date('Y-m-d H:i'):'' }}</td>
                                                <td>{{ arImplementacionDetalle.estadoInicio?'SI':'NO' }}</td>
                                                <td>{{ arImplementacionDetalle.estadoCapacitado?'SI':'NO' }}</td>
                                                <td>{{ arImplementacionDetalle.estadoTerminado?'SI':'NO' }}</td>
                                                <td class="text-center">
                                                    {% if arImplementacionDetalle.estadoInicio == 0 %}
                                                        <a href="javascript:abrirVentana3('{{ path('cliente_implementacion_nuevo', {'id': arImplementacionDetalle.codigoImplementacionDetallePk}) }}', 'Escalar', 600, 1200)">
                                                            <i class="fa fa-edit fa-lg"></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                                <td class="text-center">
                                                    <a href="javascript:abrirVentana3('{{ path('documental_archivo_ver', {'tipo': '1',  'codigo': arImplementacionDetalle.codigoImplementacionDetallePk}) }}', 'Archivo', 600, 1200)">
                                                        <i class="fa fa-download"></i>
                                                    </a>
                                                </td>
                                                <td class="text-center">
                                                    {% if arImplementacionDetalle.codigoDocumentacionFk %}
                                                        <a href="http://semantica.com.co/semanticaweb/public/index.php/documetacion/detalle/{{ arImplementacionDetalle.codigoDocumentacionFk }}"
                                                           target="_blank">
                                                            <i class="fa fa-edit fa-file-text-o "></i>
                                                        </a>
                                                    {% endif %}
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex justify-content-between">
                                    <div class="btn btn-default btn-sm">Registros
                                        <span>{{ arImplementacionDetalles.getTotalItemCount }}</span>
                                    </div>
                                    <div class="btn-group btn-xs">
                                        {{ knp_pagination_render(arImplementacionDetalles) }}
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
