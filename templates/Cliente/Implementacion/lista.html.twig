{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="card-header title-bg-color">
                                <h5>Filtros</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-row">
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Modulo:</label>
                                        {{ form_widget(form.moduloRel) }}
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Capacitado:</label>
                                        {{ form_widget(form.estadoCapacitado) }}
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Terminado:</label>
                                        {{ form_widget(form.estadoTerminado) }}
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer bg-white">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.btnFiltrar, { 'attr': {'class': 'btnCustom'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <div class="table-responsive-sm">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <thead class="title-bg-color">
                                <tr>
                                    <th>Id</th>
                                    <th>Nombre</th>
                                    <th>Lider</th>
                                    <th>Celular</th>
                                    <th>Correo</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for arImplementacion in arImplementaciones %}
                                    <tr>
                                        <td>{{ arImplementacion.codigoImplementacionPk }}</td>
                                        <td>{{ arImplementacion.nombre }}</td>
                                        <td>{{ arImplementacion.liderCliente }}</td>
                                        <td>{{ arImplementacion.celularLider }}</td>
                                        <td>{{ arImplementacion.correoLider }}</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <div class="table-responsive-sm">
                            <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                <thead class="title-bg-color">
                                    <th>Id</th>
                                    <th>Modulo</th>
                                    <th>Compromiso</th>
                                    <th>Cod</th>
                                    <th>Requisito</th>
                                    <th>Cod</th>
                                    <th>Funcionalidad</th>
                                    <th>Responsable</th>
                                    <th>Comentario</th>
                                    <th title="Capacitado">CAP</th>
                                    <th title="Terminado">TER</th>
                                    <th></th>
                                    <th></th>
                                </thead>
                                <tbody>
                                {% for arImplementacionDetalle in arImplementacionDetalles %}
                                    <tr>
                                        <td>{{ arImplementacionDetalle.codigoImplementacionDetallePk }}</td>
                                        <td>{{ arImplementacionDetalle.moduloNombre }}</td>
                                        <td>{{ arImplementacionDetalle.fechaCompromiso?arImplementacionDetalle.fechaCompromiso | date('Y-m-d H:i'):'' }}</td>
                                        <td>{{ arImplementacionDetalle.codigoRequisitoFk }}</td>
                                        <td>{{ arImplementacionDetalle.requisitoNombre }}</td>
                                        <td>{{ arImplementacionDetalle.codigoFuncionalidadFk }}</td>
                                        <td>{{ arImplementacionDetalle.funcionalidadNombre }}</td>
                                        <td>{{ arImplementacionDetalle.responsable }}</td>
                                        <td>{{ arImplementacionDetalle.comentario }}</td>
                                        <td  class="text-center">{{ arImplementacionDetalle.estadoCapacitado?'SI':'NO' }}</td>
                                        <td>{{ arImplementacionDetalle.estadoTerminado?'SI':'NO' }}</td>
                                        <td class="text-center">
                                            <a href="javascript:abrirVentana3('{{ path('cliente_implementacion_detalle_nuevo', { 'id': arImplementacionDetalle.codigoImplementacionDetallePk }) }}', 'Nuevo', 600, 1200)">
                                                <i class="fas fa-pen fa-2x"></i>
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a href="javascript:abrirVentana3('{{ path('utilidad_archivo_lista', { 'tipo': 'implementacion_detalle',  'codigo': arImplementacionDetalle.codigoImplementacionDetallePk }) }}', 'Archivos', 800, 1250)">
                                                <i class="fas fa-file-upload fa-2x"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
