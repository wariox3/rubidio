{% extends 'base.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('cliente_caso_lista') }}">Volver</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial py-0">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <tr>
                                            <td class="title-bg-color">CODIGO:</td>
                                            <td class="td-in-well">{{ arCaso.codigoCasoPk }}</td>
                                            <td class=""></td>
                                            <td class="td-in-well"></td>
                                            <td class=""></td>
                                            <td class="td-in-well"></td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">DESCRIPCION:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.descripcion }}</td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">ESCALADO:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.escalado }}</td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">SOLUCION:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.solucion }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial">
                        <section class="card">
                            <div class="card-header bg-white">
                                <div class="d-flex justify-content-end">
                                    <a class="btnCustom"
                                       href="javascript:abrirVentana3('{{ path('documental_archivo_lista', { 'tipo': 2,  'codigo': arCaso.codigoCasoPk }) }}', 'Archivos', 800, 1250)">
                                        <i class="fas fa-upload"></i> Subir archivo
                                    </a>
                                </div>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-datos m-0">
                                        <thead class="title-bg-color">
                                        <tr>
                                            <th>ID</th>
                                            <th>CODIGO</th>
                                            <th>FECHA</th>
                                            <th>NOMBRE</th>
                                            <th>ARCHIVO</th>
                                            <th>USUARIO</th>
                                            <th></th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for arArchivos in arArchivos %}
                                            <tr>
                                                <td><input type="hidden" name="LblCodigo[]"
                                                           value="{{ arArchivos.codigoArchivoPk }}">{{ arArchivos.codigoArchivoPk }}
                                                </td>
                                                <td>{{ arArchivos.codigo }}</td>
                                                <td>{{ arArchivos.fecha | date ('Y-m-d H:i:s') }}</td>
                                                <td>{{ arArchivos.descripcion }}</td>
                                                <td>{{ arArchivos.nombre }}</td>
                                                <td>{{ arArchivos.usuario }}</td>
                                                <td class="text-center"><a
                                                            href="{{ path('documental_archivo_descargar', { 'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><i
                                                                class="fas fa-download"></i></a></td>
                                                <td class="text-center"><a
                                                            href="{{ path('documental_archivo_eliminar', { 'tipo': tipo, 'codigo': arArchivos.codigoArchivoPk }) }}"
                                                            onclick='return confirm("Esta seguro de eliminar el archivo?")'><i
                                                                class="fas fa-trash"></i></a></td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>

                        </section>
                    </div>
                </div>
            </div>

        </div>
    </section>

    {#    <div class="row mt-2"> #}

    {#        <div class="table-responsive"> #}
