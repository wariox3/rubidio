{% extends 'base.html.twig' %}
{% block content %}
    {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
    <div class="row">
        <div class="btn-toolbar" style="float:left">
            <div class="btn-group">
                <a class="btn btn-default btn-sm" href="{{ path('cliente_caso_lista') }}">Volver</a>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <table width="100%" class="table table-condensed table-bordered">
            <tr>
                <td class="titulo">CODIGO:</td>
                <td class="td-in-well">{{ arCaso.codigoCasoPk }}</td>
                <td class="titulo"></td>
                <td class="td-in-well"></td>
                <td class="titulo"></td>
                <td class="td-in-well"></td>
            </tr>
            <tr>
                <td class="titulo">DESCRIPCION:</td>
                <td class="td-in-well" colspan="5">{{ arCaso.descripcion }}</td>
            </tr>
            <tr>
                <td class="titulo">ESCALADO:</td>
                <td class="td-in-well" colspan="5">{{ arCaso.escalado }}</td>
            </tr>
            <tr>
                <td class="titulo">SOLUCION:</td>
                <td class="td-in-well" colspan="5">{{ arCaso.solucion }}</td>
            </tr>
        </table>
    </div>
    <div class="row mt-2">
        <a class="btn btn-default btn-sm"
           href="javascript:abrirVentana3('{{ path('documental_archivo_lista', { 'tipo': 2,  'codigo': arCaso.codigoCasoPk }) }}', 'Archivos', 800, 1250)">
            <i class="fa fa-upload"></i> Subir archivo
        </a>
        <div class="table-responsive">
            <table  class="table table-striped table-bordered table-condensed table-hover tabla-datos">
                <tr>
                    <th>ID</th>
                    <th>CODIGO</th>
                    <th>FECHA</th>
                    <th>NOMBRE</th>
                    <th>ARCHIVO</th>
                    <th>USUARIO</th>
                    <th></th>
                </tr>
                {% for arArchivos in arArchivos %}
                <tr>
                    <td><input type="hidden" name="LblCodigo[]" value="{{ arArchivos.codigoArchivoPk }}">{{ arArchivos.codigoArchivoPk }} </td>
                    <td>{{ arArchivos.codigo  }}</td>
                    <td>{{ arArchivos.fecha | date ('Y-m-d H:i:s') }}</td>
                    <td>{{ arArchivos.descripcion  }}</td>
                    <td>{{ arArchivos.nombre  }}</td>
                    <td>{{ arArchivos.usuario  }}</td>
                    <td style="text-align: center"><a href="{{ path('documental_archivo_descargar', { 'codigoArchivo': arArchivos.codigoArchivoPk }) }}"><i class="fa fa-download" style="font-size: large;color: black;"></i></a></td>
{#                    <td style="text-align: center"><a href="{{ path('documental_archivo_eliminar', { 'tipo': tipo, 'codigo': arArchivos.codigoArchivoPk }) }}"onclick='return confirm("Esta seguro de eliminar el archivo?")'><i class="fa fa-trash-o" style="font-size: large;color: black;"></i></a></td>#}
                </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}
