{% extends 'baseAdmin.html.twig' %}
{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('cliente_caso_lista') }}">Volver</a>
                            <a class="btnCustom"
                               href="javascript:abrirVentana3('{{ path('utilidad_archivo_lista', { 'tipo': 'caso',  'codigo': arCaso.codigoCasoPk }) }}', 'Archivos', 800, 1250)">
                                <i class="fas fa-upload"></i> Archivos
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="single-testimonial py-0">
                        <section class="card">
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-condensed table-bordered table-hover mb-none tabla-administracion m-0">
                                        <tr>
                                            <td class="title-bg-color">CODIGO:</td>
                                            <td class="td-in-well">{{ arCaso.codigoCasoPk }}</td>
                                            <td class=""></td>
                                            <td class="td-in-well"></td>
                                            <td class=""></td>
                                            <td class="td-in-well"></td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">DESCRIPCION:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.descripcion }}</td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">ESCALADO:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.escalado }}</td>
                                        </tr>
                                        <tr>
                                            <td class="title-bg-color">SOLUCION:</td>
                                            <td class="td-in-well" colspan="5">{{ arCaso.solucion }}</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
