{% extends 'base.html.twig' %}

{% block content %}
    <section class="services-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="d-flex justify-content-start">
                            <a class="btnCustom" href="{{ path('cliente_caso_lista') }}">Volver  <span></span></a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="single-testimonial">
                        <div class="card">
                            {{ form_start(form, { 'attr': {'class': 'form-horizontal'} }) }}
                            <div class="card-header title-bg-color">
                                <h5>Nuevo</h5>
                            </div>
                            <div class="card-body">
                                <div class="form-group">
                                    <label class="control-label">Prioridad:</label>
                                    {{ form_widget(form.prioridadRel) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Contacto:</label>
                                    {{ form_widget(form.contacto) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Correo:</label>
                                    {{ form_widget(form.correo) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Telefono(ext):</label>
                                    {{ form_widget(form.telefono) }}
                                </div>
                                <div class="form-group">
                                    <label class="control-label">Descripci√≥n:</label>
                                    {{ form_widget(form.descripcion, { 'attr': {'style':'height: 325px;'} }) }}
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="d-flex justify-content-end">
                                    {{ form_widget(form.guardar, { 'attr': {'class': 'btnCustom'} }) }}
                                </div>
                            </div>
                        </div>
                        {{ form_rest(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
